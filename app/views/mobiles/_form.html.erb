<%= form_with(model: mobile) do |form| %>
  <div class="modal-body" style="background-color: black; color: white;">
    <div style="background-color:yellow">
      <% if mobile.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(mobile.errors.count, "error") %> prohibited this mobile from being saved:</h2>
          <ul>
            <% mobile.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div>
      <%= form.label :brand_name, style: "display: block" %>
      <%= form.text_field :brand_name %>
    </div>

    <div>
      <%= form.label :ram, style: "display: block" %>
      <%= form.text_field :ram %>
    </div>

    <div>
      <%= form.label :rom, style: "display: block" %>
      <%= form.text_field :rom %>
    </div>

    <div>
      <%= form.label :price, style: "display: block" %>
      <%= form.text_field :price %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <%= form.submit 'Submit',class:"btn btn-info", data: { action: "click->bs-modal#submitEnd" } %>
  </div>
<% end %>

